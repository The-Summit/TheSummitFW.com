{% extends "archive-default.twig" %}
{% block source %}archive-news.twig{% endblock %}

{% block jumbo %}
{% set jumbo_text = "Our campus is a beehive of activity, and great things are happening here every day. Here are some of the most newsworthy items!" %}
{% set jumbo_title = "Campus News" %}
{% include "jumbotron.twig" %}
{% endblock %}
{% block postfilter %}
<ul class="col-md-6 offset-md-3">
	{% for post in posts if post.parent==0 %}
	<li class="list-group-item d-flex justify-content-between align-items-center">
			{%if post.thumbnail %}<div class="col-2"><span class="badge"><img class="img-fluid" src="{{post.thumbnail}}" /></span></div>{% endif %}
			<h4 class="col-4"><a href="{{post.url}}">{{post.title}}</a></h4>
			{% if post.post_excerpt %}<div class="col-6"><em>"{{post.post_excerpt}}" ({{post.article_date|date("M d, Y")}})</em></div>{% endif %}
	</li>	
	{% endfor %}
</ul>
{% endblock %}