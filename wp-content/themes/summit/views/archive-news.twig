{% extends "base.twig" %}
{% block source %}archive-press.twig{% endblock %}
{% block title %}Campus News{% endblock %}
{% block description %}Our campus is a beehive of activity, and great things are happening here every day. Here are some of the most newsworthy items!{% endblock %}
{% block postfilter %}
	{% for post in posts if post.parent==0 %}
	<div class="media">		
		<a class="media-left" href="{{post.url}}">
			{%if post.thumbnail %}<img class="img-fluid" src="{{post.thumbnail}}" />{% endif %}
		</a>
		<div class="media-body">
			<h4 class="media-heading"><a href="{{post.url}}">{{post.title}}</a></h4>
			{% if post.post_excerpt %}<em>"{{post.post_excerpt}}" ({{post.article_date|date("M d, Y")}})</em>{% endif %}
		</div>
	</div>	
	{% endfor %}
{% endblock %}