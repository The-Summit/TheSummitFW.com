<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
	<section class="article-content">
		<div class="row" itemscope itemtype="http://data-vocabulary.org/Person>
			<div class="col-6 col-md-3">
				<div class="card">
					<img class="card-img-top" itemprop="photo" src="{{post.thumbnail.get_src|better_resize(400,400)}}"/>
					<div class="card-body">
						<span class="hidden" itemprop="org">The Summit</span>
						<h2 itemprop="name">{{post.title}}</h2>
						<div class="article-body col-md-5">
							{{post.get_content}}
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
</article>